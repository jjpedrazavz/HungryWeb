@model HungryWeb.ViewModels.FoodViewModel

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm()) 
{
    @Html.AntiForgeryToken()
    
    <div class="form-horizontal">
        <h4>Alimentos</h4>
        <hr />
        @*Insertamos una validacion general en la parte superior que va a desplegar todos los errores
          en el formulario y mandamos a llamar a la vista parcial pasandole el modelo de datos por parametro*@
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.Partial("_CrearEditarAlimento", Model)

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

@model IEnumerable<HungryWeb.Models3.Ordenes>

@{
    ViewBag.Title = "Index";
}

<h2>Ordenes</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Comensales.Nombre)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estado.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Comensales.Nombre)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estado.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Details", "Details", new { id=item.OrdenID }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.OrdenID })
        </td>
    </tr>
}

</table>
